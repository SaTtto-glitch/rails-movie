<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Year</th>
      <th>Description</th>
      <th>Image</th>
      <th>Is Showing</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><%= link_to "画像", movie.image_url %></td>
        <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
        <td><%= link_to 'Edit', edit_admin_movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
