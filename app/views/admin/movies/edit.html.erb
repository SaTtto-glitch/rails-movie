<h1>Edit Movie</h1>

<%= form_with(model: [@movie], url: admin_movie_path(@movie), local: true) do |form| %>

  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.file_field :image_url %>
  </div>

  <div class="form-group">
    <%= form.label :is_showing, "上映中" %>
    <%= form.check_box :is_showing %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= button_to "Delete", admin_movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
